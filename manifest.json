{
  "manifest_version": 2,
  "name": "Weather Extension",
  "version": "1.0",
  "description": "Get real-time weather updates.",
  "icons": { "128": "icon.png" },
  "browser_action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
  },
  "permissions": [
      "http://api.openweathermap.org/",
      "geolocation"
  ]
}
